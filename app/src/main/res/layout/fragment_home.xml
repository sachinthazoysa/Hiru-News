<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="25dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            >

            <TextView
                android:id="@+id/hotnews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hot News"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

            <LinearLayout
                android:id="@+id/hotnewslinear"
                android:layout_marginTop="10dp"
                android:layout_below="@id/hotnews"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/newsImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/g1" />

                        <ImageView
                            android:id="@+id/newsImage2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/g2"/>
                        <ImageView
                            android:id="@+id/newsImage3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/g3"
                            android:layout_marginRight="20dp">
                        </ImageView>
                        <ImageView
                            android:id="@+id/newsImage4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/g4"
                            android:layout_marginRight="20dp">
                        </ImageView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <TextView
                android:layout_below="@+id/hotnewslinear"
                android:layout_marginTop="40dp"
                android:id="@+id/recommendation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommendation"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/businessimage"
                android:layout_marginTop="10dp"
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:src="@drawable/business"
                android:layout_below="@+id/recommendation"
             />
            <ImageView
                android:id="@+id/sportsimage"
                android:layout_marginTop="10dp"
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:src="@drawable/sports"
                android:layout_below="@+id/businessimage"
                >
            </ImageView>

            <TextView
                android:layout_below="@+id/sportsimage"
                android:layout_marginTop="20dp"
                android:id="@+id/currencyhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

            <LinearLayout
                android:id="@+id/currencylayout"
                android:layout_below="@id/currencyhead"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/cur1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/cur1"
                            android:layout_marginRight="5dp"/>

                        <ImageView
                            android:id="@+id/cur2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/cur3"/>

                        <ImageView
                            android:id="@+id/cur3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/cur4" />


                        <ImageView
                            android:id="@+id/cur4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/cur5"/>

                        <ImageView
                            android:id="@+id/cur5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/cur6"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <TextView
                android:layout_below="@+id/currencylayout"
                android:layout_marginTop="20dp"
                android:id="@+id/todaynewshead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today News"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/todaynewshead"
                android:id="@+id/img1"
                android:src="@drawable/port"/>
            <ImageView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img1"
                android:id="@+id/img2"
                android:src="@drawable/covid"/>
            <ImageView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/img2"
                android:id="@+id/img3"
                android:src="@drawable/sinharaja"
                android:layout_marginBottom="40dp"/>

            <TextView
                android:layout_below="@+id/img3"
                android:layout_marginTop="0dp"
                android:id="@+id/weatherHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather forcast"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
        <LinearLayout
            android:id="@+id/weatherlinear"
            android:layout_marginTop="10dp"
            android:layout_below="@id/weatherHead"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="100dp">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/w1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/w1" />

                    <ImageView
                        android:id="@+id/w2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/w2"/>
                    <ImageView
                        android:id="@+id/w3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/w3"
                        android:layout_marginRight="20dp">
                    </ImageView>
                    <ImageView
                        android:id="@+id/w4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/w4"
                        android:layout_marginRight="20dp">
                    </ImageView>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>