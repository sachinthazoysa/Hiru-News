<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffff">

    <LinearLayout
        android:id="@+id/heading_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/add_image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Image"
            android:textColor="#000000"
            android:layout_marginLeft="25dp"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/captured_image_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading_section"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/captured_image_1_layout"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/submit_news_form_add_image"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/captured_image_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_add_bigger"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/captured_image_2_layout"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/submit_news_form_add_image"
            >

            <ImageView
                android:id="@+id/captured_image_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_add_bigger"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/captured_image_3_layout"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/submit_news_form_add_image"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/captured_image_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_add_bigger"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/news_field"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@id/captured_image_section"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Enter News Description"
        android:textColorHint="#000000"
        android:inputType="textMultiLine"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"/>



</RelativeLayout>